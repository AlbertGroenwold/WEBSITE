@page "/"

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name - You are Authenticated!</h1>
    </Authorized>
    <NotAuthorized>
        <h1>Hello, world!</h1>
    </NotAuthorized>
</AuthorizeView>

<AuthorizeView Roles="admin, superuser, Administrators">
    <Authorized>
        <h1><b>You can see this because you are an admin</b></h1>
    </Authorized>
</AuthorizeView>



